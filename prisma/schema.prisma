

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metal {
	id              String   @id @default(cuid())
	name String
	cashPrice Float?
	nonCashPrice Float?
	updatedAt DateTime @updatedAt
}

model Admin {
	id String @id @default(cuid())
	login String
	password String 
	createdAt DateTime @default(now())
}

model Article {
	id String @id @default(cuid())
	title String
	description String
	slug String
	createdAt DateTime @default(now())
  	updatedAt DateTime @updatedAt
}